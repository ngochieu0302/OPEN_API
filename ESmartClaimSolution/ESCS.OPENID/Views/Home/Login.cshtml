@model ESCS.COMMON.Auth.user_login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="main-wrapper">
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background-size: cover;">
        <div class="auth-box p-4 bg-white rounded">
            <div id="loginform">
                <div class="logo">
                    <h3 class="box-title mb-3">Đăng nhập</h3>
                </div>
                <!-- Form -->
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Login" method="post" class="form-horizontal mt-3 form-material" id="loginform">
                            <div class="form-group mb-3">
                                <div class="">
                                    <input asp-for="username" class="form-control" placeholder="Tên đăng nhập/Email" />
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="">
                                    <input asp-for="password" class="form-control" placeholder="Mật khẩu" />
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <div class="col-6">
                                    <img id="img-captcha" src="@Url.Action("Captcha", "Home")" style="width:100%;margin-top:5px;" />
                                </div>
                                <div class="col-6">
                                    <input asp-for="captcha" class="form-control" placeholder="Captcha" />
                                </div>
                                <div class="col-12">
                                    <span asp-validation-for="captcha" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="d-flex">
                                    <div class="ml-auto">
                                        <a href="javascript:void(0)" id="to-recover" class="text-muted">
                                            <i class="fa fa-lock mr-1"></i> Quên mật khẩu
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center mt-4">
                                <div class="col-xs-12">
                                    <button class="btn btn-info btn-md btn-block text-uppercase waves-effect waves-light" type="submit">Đăng nhập</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div id="recoverform">
                <div class="logo">
                    <h3 class="font-weight-medium mb-3">Recover Password</h3>
                    <span class="text-muted">Enter your Email and instructions will be sent to you!</span>
                </div>
                <div class="row mt-3 form-material">
                    <!-- Form -->
                    <form class="col-12" action="index.html">
                        <!-- email -->
                        <div class="form-group row">
                            <div class="col-12">
                                <input class="form-control" type="email" required="" placeholder="Username">
                            </div>
                        </div>
                        <!-- pwd -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <button class="btn btn-block btn-lg btn-primary text-uppercase" type="submit" name="action">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

